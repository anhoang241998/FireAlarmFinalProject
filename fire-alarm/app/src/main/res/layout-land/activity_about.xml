<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:orientation="horizontal">



        <ImageView
            android:id="@+id/logoapp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fire_alarm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>
        <TextView
            android:id="@+id/firealarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire Alarm"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/logoapp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.3.3"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/firealarm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/intro1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version"
            android:textStyle="normal"
            android:text="I started with one mission: "
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/intro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_toRightOf="@+id/intro1"
        android:textStyle="bold"
        android:text="Alarm People On Fire "
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/intro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro1"
        android:textStyle="normal"
        android:text="A key aspect of fire protection is to identify a developing fire emergency in a timely manner, and to alert the building's occupants and fire emergency organizations. This is the role of my fire detection and alarm systems app. "
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/intro4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro3"
        android:textStyle="normal"
        android:text="I am frequently supported by my awesome teacher: Mr Lê Trọng Nghĩa, and many friends like: Trần Quang Tuấn, Phạm Quang Khải,Nguyễn Viết Thanh,... I give my best appreciate to them. "
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/intro5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro4"
        android:textStyle="normal"
        android:text="Finally, I really happy to have you here and enjoying my app. "
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/intro6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Me"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/intro5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <ImageButton
        android:layout_below="@+id/intro6"
        android:id="@+id/imageButton1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_facebook"
        android:background="@drawable/circlebutton"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="300dp"
        android:elevation="10dp"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_019_youtube"
        android:background="@drawable/circlebutton"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:layout_marginLeft="20dp"
        android:elevation="10dp"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_008_linkedin"
        android:background="@drawable/circlebutton"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_marginLeft="20dp"
        android:elevation="10dp"/>




</RelativeLayout>
</ScrollView>
